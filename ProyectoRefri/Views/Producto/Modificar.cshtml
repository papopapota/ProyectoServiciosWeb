@model ProyectoRefri.Models.ProductoModel

@{
    ViewData["Title"] = "Modificar";
}

<div class="container">
    <br /><br />
<h4 class="mt-5">Modificar Producto</h4>
<hr />
<div>
    <a style="font-size:1.2em;text-decoration:none;" asp-action="ListarAdmin">Regresar</a>
</div>
<div class="row">
    <div class="col-md-5">
        <form class="formulario m-lg-3" asp-action="Modificar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="idProducto" class="control-label"></label>
                    <input asp-for="idProducto" class="form-control rounded-pill bg-light" readonly/>
                    <span asp-validation-for="idProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nombre" class="control-label"></label>
                    <input asp-for="nombre" class="form-control rounded-pill bg-light" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="precio" class="control-label"></label>
                    <input asp-for="precio" class="form-control rounded-pill bg-light" />
                    <span asp-validation-for="precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="stock" class="control-label"></label>
                    <input asp-for="stock" class="form-control rounded-pill bg-light" />
                    <span asp-validation-for="stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="descripcion" class="control-label"></label>
                    <input asp-for="descripcion" class="form-control rounded-pill bg-light" />
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imagen" class="control-label"></label>
                    <!--<input asp-for="imagen" class="form-control rounded-pill bg-light" />
                    <input asp-for="imagen" type="file" class="form-control rounded-pill bg-light" />
                        <span asp-validation-for="imagen" class="text-danger"></span>-->
                    <input type="file" class="form-control rounded-pill bg-light" data-val="true" data-val-required="The Imagen field is required." id="imagen" name="imagen">

                </div>
                <div class="form-group">
                    <label asp-for="estado" class="control-label"></label>
                    <input asp-for="estado" class="check-box" type="checkbox">
                    <span asp-validation-for="estado" class="text-danger"></span>

                </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary mt-3" />
            </div>
        </form>
            <div>
                @ViewBag.mensaje
            </div>

    </div>
    <div class="col-2"></div>
    <div class="col-4">
        <!-- <img src="~/img/productoIcon.png"/>-->
        <img class="iconPage" src="https://cdn-icons-png.flaticon.com/512/1170/1170577.png" />
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
